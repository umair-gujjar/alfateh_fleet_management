                                <field name="supplier_details" attrs="{'readonly': [('state','=','vehicle_exit')],'invisible': [('outward_Category','=','Shop')]}"/>
                                <field name="vehicle_num" attrs="{'readonly': [('state','=','vehicle_exit')],'invisible': [('own_vehicle','=',False)]}"/>
                                <field name="driver_text" attrs="{'readonly': [('state','=','vehicle_exit')],'invisible': [('own_vehicle','=',False)]}"/>
                                <field name="invoice_ref" attrs="{'readonly': [('state','=','vehicle_exit')],'invisible': [('outward_Category','=','Shop')]}"/>
                                <field name="gi_seal"  attrs="{'readonly': [('state','=','vehicle_exit')],'invisible': ['|',('state','=','vehicle_enter'),('outward_Category','!=','Shop')]}"/>
                                <field name="own_vehicle" attrs="{'readonly': [('state','=','vehicle_exit')],'invisible': [('state','=','vehicle_process')]}" />
                                
                                <field name="transfer_order" attrs="{'readonly': [('state','=','vehicle_exit')],'invisible': [('outward_Category','!=','Shop')]}"/> 
                                <field name="gpi_odoo_meter" attrs="{'readonly': [('state','=','vehicle_exit')],'invisible': ['|','|',('outward_Category','=','General'),('state','=','vehicle_enter'),('own_vehicle','=',True)]}"/>
