                <form string="Inwardpass">
                    <header attrs="{'invisible': [('outward_Category','=', False)]}">
                       <button string="Gate In" type="object" name="vehicle_process" attrs="{'invisible': ['|',('state', '!=', 'vehicle_enter') , ('outward_Category', '=', 'General')]}"/>
