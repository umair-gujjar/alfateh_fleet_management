                    <notebook colspan="3"  attrs="{'invisible': ['|',('outward_Category', '=', 'Returnable') , ('outward_Category', '=', False)]}">
                        <page string="Gate Out" >
                            <group>
                                    <field name="out_inshop_id" nolabel='1'>
                                        <tree editable="bottom">
                                            <field name="uom"/>
                                            <field name="qty"/>
