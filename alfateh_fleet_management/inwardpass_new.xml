                        <h1><field name="name" invisible="1"/></h1>
                        <group name="group_top">
                            <field name="outward_Category" attrs="{'readonly': [('state','!=','vehicle_enter')]}" />
                        </group>    

                        <group name="group_top" attrs="{'invisible': [('outward_Category','=', False)]}">
